<h1>Users#new</h1>
<p>Find me in app/views/users/new.html.erb</p>


<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= simple_form_for [@user] do |f| %>
      <%= f.error_notification %>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :gender, collection: ['homme', 'femme'], prompt: "sex" %>
      <%= f.input :email %>
      <%= f.input :phone_number%>
      <%= f.input :address%>
      <%= f.input :description %>
      <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>



