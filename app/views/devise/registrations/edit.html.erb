<div class= "text-center">
  <h1>Update your profile</h1>
  <h3>Complete your profile</h3>
</div>


<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= simple_form_for (@user) do |f| %>
      <%=f.input :first_name, placeholder: "John", autofocus: true %>
      <%=f.input :last_name, placeholder: "Doe" %>
      <%= f.input :gender, as: :radio_buttons,
          collection: ['Male', 'Female'], wrapper: :vertical_radio_and_checkboxes %>
      <%=f.input :phone_number, placeholder: "+33 XXX XX XX XX" %>
      <%=f.input :description, placeholder: "Description" %>
      <%=f.input :address, placeholder: "16 villa gaudelet, 75011 Paris" %>
      <%=f.input :email, placeholder: "john.doe@gmail.com" %>

      <%=f.button :submit, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

<div class= "text-center">
  <h1>Change your password</h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, required: true %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
          <%= f.input :password_confirmation, required: false %>
          <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Update password" %>
        </div>
      <% end %>

      <h3>Cancel my account</h3>

      <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

      <p><%= link_to "back", users_path%></p>
    </div>
  </div>
</div>
