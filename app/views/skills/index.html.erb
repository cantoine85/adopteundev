<h1>List of skills</h1>


<div class="container">
  <div class="row">
    <% @skills.each do |skill| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card">
          <span class="card-bg" style="background-image: url('https://unsplash.it/300/300?')">
          </span>
          <span class="card-shadow"></span>
          <span class="card-description">Popular</span>
          <span class="card-text">
            <h2><%= skill.name %></h2>
            <p><%= "Adopte moi !!!" %>
          </span>
        </div>
      </div>
    <% end %>
  </div>
</div>

